{
  "name": "Local Build Check",
  "description": "Run a quick local check and app tests.",
  "enabled": true,
  "steps": [
    {
      "name": "Cargo check",
      "action": { "type": "run_command", "command": "cargo check --quiet" },
      "timeout_secs": 900
    },
    {
      "name": "App tests",
      "action": { "type": "run_command", "command": "cargo test --quiet -p hive_app" },
      "timeout_secs": 1200
    }
  ]
}

